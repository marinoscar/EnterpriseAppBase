{
  "name": "api",
  "version": "0.0.1",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest --config ./test/jest.config.js",
    "test:watch": "jest --config ./test/jest.config.js --watch",
    "test:cov": "jest --config ./test/jest.config.js --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --config ./test/jest.config.js",
    "test:e2e": "jest --config ./test/jest.config.js --testRegex '.e2e-spec.ts$'",
    "test:unit": "jest --config ./test/jest.config.js --testPathIgnorePatterns='e2e'",
    "test:ci": "jest --config ./test/jest.config.js --coverage --ci --reporters=default --reporters=jest-junit"
  },
  "dependencies": {
    "@fastify/cookie": "^9.4.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@nestjs/common": "^10.x",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.x",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-fastify": "^10.x",
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/terminus": "^10.3.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.68.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.210.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.210.0",
    "@opentelemetry/resources": "^2.4.0",
    "@opentelemetry/sdk-node": "^0.210.0",
    "@opentelemetry/semantic-conventions": "^1.39.0",
    "@prisma/client": "^5.x",
    "nestjs-zod": "^3.0.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "pino": "^9.14.0",
    "reflect-metadata": "^0.2.x",
    "rxjs": "^7.x",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.x",
    "@nestjs/schematics": "^10.x",
    "@nestjs/testing": "^10.x",
    "@types/jest": "^29.x",
    "@types/node": "^20.x",
    "@types/passport-google-oauth20": "^2.0.17",
    "@types/passport-jwt": "^4.0.1",
    "jest": "^29.x",
    "pino-pretty": "^13.1.3",
    "prisma": "^5.x",
    "ts-jest": "^29.x",
    "ts-node": "^10.x",
    "typescript": "^5.x"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
